  replay                   = "enable"
  route_overlap            = "use-new"
  single_source            = "disable"
  src_addr_type            = "subnet"
  src_end_ip6              = "::"
  src_port                 = 0
  src_subnet               = "0.0.0.0 0.0.0.0"
